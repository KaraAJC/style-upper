<div class='page-header'>
  <h1>Current Locations</h1>
</div>

<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Address</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= link_to store.store_name, store %></td>
        <td><%= store.address %></td>
        <td><%= link_to 'Edit', edit_store_path(store) %> |
            <%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Location', new_store_path, class: 'btn btn-primary' %>
